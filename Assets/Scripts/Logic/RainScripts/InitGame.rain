    space native integer GetControlCount()
    space native integer, string GetControl(integer idx)
    //逻辑世界初始化
    public GameMain()
        LoadMagicNodeConfig()
        LoadEntityConfig()
        LoadUnitConfig()

        var cnt = GetControlCount()
        ctrlId2pId = integer[cnt]
        players = Player[cnt]
        for var i = 0; i < cnt; i++
            var ctrlId, var name = GetControl(i)
            ctrlId2pId[ctrlId] = i
            players[i] = Player(i, ctrlId, name)
            players[i].hero = CreateUnit('U_hero', i, real3(0, 0, 1), GetRandomWorldPosition())

